  <body>
    <div class="emc-container">
      <nav class="navbar navbar-expand-lg navbar-dark fixed-top">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse justify-content-md-center" id="navbarNav">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link navbar-brand" href="<%=accueil_index_path%>"><h2 class="">Elysia FanstasyRP</h2><span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="<%=accueil_index_path%>"><h3 class="nav-text">ACCUEIL</h3><span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="<%=boutique_index_path%>"><h3 class="nav-text">BOUTIQUE</h3><span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item active">
              <a class="nav-link" href="<%=accueil_index_path%>"><h3 class="nav-text">NEWS</h3><span class="sr-only">(current)</span></a>
            </li>
            <%if cookies.signed[:pseudo].nil?%>
            <li class="nav-item active">
              <a class="nav-link" href="<%=profil_index_path%>"><h3 class="nav-text">PROFIL</h3><span class="sr-only">(current)</span></a>
            </li>
            <%else%>
              <li class="nav-item active">
                <a class="nav-link" href="<%=profil_index_path%>"><img src="<%="https://mc-heads.net/avatar/#{cookies.signed[:pseudo]}/40"%>"><span class="sr-only">(current)</span></a>
              </li>
              <li class="nav-item active">
                <a style="margin-top: 1vh"class="nav-link" href="/profil/reset">X<span class="sr-only">(current)</span></a>
              </li>
            <%end%>
          </ul>
        </div>
      </nav>
      <%= yield %>
      <nav class="footer navbar navbar-expand-lg">
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExample08" aria-controls="navbarsExample08" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-md-center" id="navbarsExample08">
          <ul class="navbar-nav">
            <li class="nav-item active">
              <a class="nav-link" href="https://mojang.com">Mojang <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="#">Accueil</a>
            </li>
            <li class="nav-item">
              <a class="nav-link disabled" href="#">made by AntDevPlus - Ce site n'est en aucun cas lié à Mojang</a>
            </li>
          </ul>
          <ul class="navbar-nav"> 
            <li>
              <a class="nav-link" href="<%=admin_menu_index_path%>">Panel d'administration</a>
            </li>
          </ul>
        </div>
      </nav>
    </div>
  </body>
</html>
